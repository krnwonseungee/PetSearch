<header>
	<h1>Pets</h1>
	total <%= @pets.size %> pets found
</header>

		<% @pets.each do |pet| %>
			<div id="animal-box">
						<p><img src="http://placehold.it/200X250"></p>
						<p><%= pet.name %><%= link_to 'profile', pet, { class: 'btn' } %></p>

						<p><%= pet.primary_breed %> - <%= pet.secondary_breed %></p>

						<p><%= pet.age %></p>
						<p><%= pet.gender %> </p>

						<p><%= pet.contact_city %> </p>
						<p><%= pet.contact_state %> </p>
				</div>
			<% end %>

<br>

<%= link_to 'New Pet', new_pet_path %>
